#include<iostream>
#include<vector>
using namespace std;
int partition(vector<float> &arr , int st , int end)
{
    int pvt=arr[end] , idx=st-1;

    for(int j=st ; j<end ; j++)
    {
        if(arr[j]<=pvt)
        {
            idx++;
            swap(arr[j] , arr[idx]);
        }
    }

    idx++;
    swap(arr[end] , arr[idx]);
    return idx;
}

void quickSort(vector<float> &arr , int st , int end)
{
    if(st<end)
    {
        int pvtIdx = partition(arr , st , end);
        quickSort(arr , st , pvtIdx-1); 
        quickSort(arr , pvtIdx+1 , end);  
    }
}
int main()
{
    int size;

    cout<<"Enter the size of array: ";
    cin>>size;

    vector<float> arr(size);

    cout<<"Enter the marks: ";
    for(int i=0 ; i<size ; i++)
    {
        cin>>arr[i];
    }

    quickSort(arr , 0 , arr.size()-1);

    cout<<"Sorted marks of students in ascending: ";
    for(int k=0 ; k<size ; k++)
    {
        cout<<arr[k]<<" ";
    }
}
